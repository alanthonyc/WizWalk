;=================================================
;===| Drawing Functions
;===============

;===| Clear Screen

;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;; \
:clearScreen

; Calculate location on screen
set x, 0x8000

:clearNextCoordinate
set [x], 0x0000
add x, 1
ifg 0x817f, x
	set pc, clearNextCoordinate

set PC, POP
;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;; /


;===| Draw Lines

;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;; \
:drawHorizontalLine
;Input:
; x - X coordinate of line origin
; y - Y coordinate of line origin
; z - length of line

; Calculate location on screen
set push, z
jsr calculateCoordinateLocation
set x, z
set z, pop

set i, 0

:drawHorizontalLine_loop
add x, 1
add i, 1
set [x], 0x2001
ifg z, i
	set PC, drawHorizontalLine_loop

set PC, POP
