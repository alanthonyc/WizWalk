;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;; \
:initStart

; load border tiles
set PUSH, a
set PUSH, b
set PUSH, c
set b, 0x0010
set c, 0x8180
set a, border0
jsr loadtiles
set c, POP
set b, POP
set a, POP

set PC, POP
;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;; /
;=================================================

;=================================================
;===| Utilities
;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;; \
:loadtiles 
; Parameters:
; A = Data to Read
; B = Length
; C = Destination

; Local:
; I = Iterator
set i, 0

:loadtiles_loop
SET [c], [a]
ADD a, 1
ADD i, 1
ADD c, 1
IFE i, b
    SET PC, loadtiles_end
SET PC, loadtiles_loop

:loadtiles_end
SET PC, POP
;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;; /

;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;; \
:calculateCoordinateLocation
; Input: X, Y Cartesian Coordinates
; Output: Z for binary location

set z, 0x8000
set a, 0x0020
mul a, y
add z, a
add z, x

set pc, pop
;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;; /

;=================================================

;=================================================
;===| Data

;===| Border Tiles
:border0 DAT 0xff01, 0x0101 ; 0x8180 top left  
:border1 DAT 0x0101, 0x0101 ; 0x8181 top
:border2 DAT 0x0101, 0x01ff ; 0x8182 top right
:border3 DAT 0xff80, 0x8080 ; 0x8183 bottom left
:border4 DAT 0x8080, 0x8080 ; 0x8184 bottom
:border5 DAT 0x8080, 0x80ff ; 0x8185 bottom right
:border6 DAT 0xff00, 0x0000 ; 0x8186 left
:border7 DAT 0x0000, 0x00ff ; 0x8187 right
;=================================================


;=================================================
;===| Main loop
:main
jsr initStart

; draw intial view
jsr drawMainWindow
;jsr drawMiddle
;jsr drawFar
;jsr clearScreen
jsr drawSolidWall

set j, 0
set b, 0
:inputLoop
ife [0x9000+b], 0
	set pc, inputLoop

jsr clearScreen
add b, 1
ife b, 16
	set b, 0

ifn j, 0
	set pc, faceSolidWall

:faceTunnel
set j, 1
jsr drawMainWindow
jsr drawMiddle
jsr drawFar
set pc, inputLoop
    
:faceSolidWall
set j, 0
jsr drawMainWindow
jsr drawSolidWall
set pc, inputLoop


; inifite loop at the end, otherwise, it falls through to some weird code and mucks up my screen
:end
set pc, end
